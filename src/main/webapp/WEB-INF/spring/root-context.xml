<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- Root Context: defines shared resources accessible to all other web components -->
	<context:annotation-config />

	<!-- Configurable application properties -->
	<context:property-placeholder location="classpath:email.properties" />

	<!-- Twitter Client API -->
	<bean id="twitterService" class="org.springframework.social.twitter.TwitterService" autowire="constructor" />
	
	<!-- Greenhouse updates -->
    <bean id="updatesService" class="com.springsource.greenhouse.updates.GreenhouseUpdatesService">
    	<constructor-arg ref="jdbcTemplate" />
    </bean>
    	
	<!-- Configures Shared Data Access Resources -->
	<import resource="data.xml" />
				
	<!-- Configures Shared Security Layer -->
	<import resource="security.xml" />

	<!-- Configures Shared Integration layer -->
	<import resource="integration.xml" />

	<!-- Configures Mail support -->
	<import resource="mail.xml" />
	
</beans>