<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- Replaces ${placeholders} with values from application.properties file -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:application.properties" />
		<property name="ignoreResourceNotFound" value="true" />
		<!-- Elvis operator for specifying default values on a placeholder-by-placeholder basis e.g. ${mail.port?25} -->
		<property name="valueSeparator" value="?" />
		<!-- Defaults if no placeholder is present -->
		<property name="properties">
			<!-- Note: these default values are expected only to apply to the 'embedded' profile, but are currently applied across all profiles -->
			<!-- In practice this is OK, since these values are override-able by values in the externalized classpath:application.properties file. 
			<!-- However, it would be better to use conditional property definition once it is available in Spring 3.1 -->
			<props>
				<prop key="application.url">http://localhost:8080/greenhouse</prop>
				<prop key="application.secureUrl">http://localhost:8080/greenhouse</prop>
				<prop key="application.secureChannel">http</prop>
			</props>
		</property>
	</bean>
	
</beans>