<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Mail sender -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="defaultEncoding" value="UTF-8" />
		<property name="host" value="#{environment['mail.host']?:'localhost'}" />
		<property name="port" value="#{environment['mail.port']?:25}" />
		<property name="username" value="#{environment['mail.username']}" />
		<property name="password" value="#{environment['mail.password']}" />
	    <property name="javaMailProperties">
	        <props>
	            <prop key="mail.smtp.auth">#{environment['mail.smtp.auth']?:false}</prop>
	            <prop key="mail.smtp.starttls.enable">#{environment['mail.smtp.starttls.enable']?:false}</prop>
	        </props>
	    </property>
   	</bean>

</beans>