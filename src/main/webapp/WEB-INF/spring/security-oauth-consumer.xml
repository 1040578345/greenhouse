<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
						
	<!-- For loading AccountProviders -->	
	<bean id="accountProviderRepository" class="com.springsource.greenhouse.connect.JdbcAccountProviderRepository">
		<constructor-arg ref="" />
		<constructor-arg value="" />
	</bean>

	<!-- Twitter Account Connections -->
	
	<bean id="twitterAccountProvider" factory-bean="accountProviderRepository" factory-method="findAccountProviderByName">
		<constructor-arg value="twitter" />
	</bean>

  	<bean id="twitterApi" factory-bean="twitterAccountProvider" factory-method="getTwitterApi" scope="request">
  		<constructor-arg value="#{request.userPrincipal}" />
  	</bean>

	<!-- Facebook Account Connections -->
	
	<bean id="facebookAccountProvider" factory-bean="accountProviderRepository" factory-method="findAccountProviderByName">
		<constructor-arg value="facebook" />
	</bean>

  	<bean id="facebookApi" factory-bean="twitterAccountProvider" factory-method="getFacebookApi" scope="request">
  		<constructor-arg value="#{request.userPrincipal}" />
  	</bean>
	
</beans>