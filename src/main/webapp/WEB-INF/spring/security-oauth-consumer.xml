<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="accountProviderFactory" class="com.springsource.greenhouse.connect.JdbcAccountProviderFactory" />

	<bean id="twitterAccountProvider" parent="accountProvider">
		<constructor-arg value="twitter" />
	</bean>

	<bean id="facebookAccountProvider" parent="accountProvider">
		<constructor-arg value="facebook" />
	</bean>

	<bean id="linkedInAccountProvider" parent="accountProvider">
		<constructor-arg value="linkedin" />
	</bean>
	
	<bean id="tripItAccountProvider" parent="accountProvider">
		<constructor-arg value="tripit" />
	</bean>
	
	<bean class="com.springsource.greenhouse.config.AccountProvidersApiConfiguration" />

	<!-- Common parents -->
	
	<bean abstract="true" id="accountProvider" factory-bean="accountProviderFactory" factory-method="getAccountProvider" />
				
</beans>