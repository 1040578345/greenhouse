<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
						
	<!-- For loading AccountProviders -->	
	<bean id="accountProviderFactory" class="com.springsource.greenhouse.connect.JdbcAccountProviderFactory" />

	<!-- Twitter Account Connections -->
	
	<bean id="twitterAccountProvider" factory-bean="accountProviderFactory" factory-method="getAccountProvider">
		<constructor-arg value="org.springframework.social.twitter.TwitterOperations" />
	</bean>
	
	<bean id="twitterApi" class="com.springsource.greenhouse.connect.AccountProviderApiFactory" factory-method="getTwitterApi" scope="request">
		<constructor-arg ref="twitterAccountProvider" />
		<constructor-arg value="#{request.getAttribute('account')}" />
	</bean>

	<!-- LinkedIn Account Connections -->
	
	<bean id="linkedInAccountProvider" factory-bean="accountProviderFactory" factory-method="getAccountProvider">
		<constructor-arg value="org.springframework.social.linkedin.LinkedInOperations" />
	</bean>
	
	<bean id="linkedInApi" class="com.springsource.greenhouse.connect.AccountProviderApiFactory" factory-method="getLinkedInApi" scope="request">
		<constructor-arg ref="linkedInAccountProvider" />
		<constructor-arg value="#{request.getAttribute('account')}" />
	</bean>

	<!-- Facebook Account Connections -->
	
	<bean id="facebookAccountProvider" factory-bean="accountProviderFactory" factory-method="getAccountProvider">
		<constructor-arg value="org.springframework.social.facebook.FacebookOperations" />
	</bean>

	<bean id="facebookApi" class="com.springsource.greenhouse.connect.AccountProviderApiFactory" factory-method="getFacebookApi" scope="request">
		<constructor-arg ref="facebookAccountProvider" />
		<constructor-arg value="#{request.getAttribute('account')}" />
	</bean>

	<!-- TripIt Account Connections -->
	
	<bean id="tripItAccountProvider" factory-bean="accountProviderFactory" factory-method="getAccountProvider">
		<constructor-arg value="org.springframework.social.tripit.TripItOperations" />
	</bean>
	
	<bean id="tripItApi" class="com.springsource.greenhouse.connect.AccountProviderApiFactory" factory-method="getTripItApi" scope="request">
		<constructor-arg ref="tripItAccountProvider" />
		<constructor-arg value="#{request.getAttribute('account')}" />
	</bean>
</beans>