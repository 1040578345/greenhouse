<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="settings" extends="standard">
		<put-attribute name="content" value="/WEB-INF/views/settings/settings.jsp" />
	</definition>
   
    <definition name="settings/twitterConnect" extends="standard">
        <put-attribute name="content" value="/WEB-INF/views/settings/twitterConnect.jsp" />
    </definition>

    <definition name="settings/twitterConnected" extends="standard">
        <put-attribute name="content" value="/WEB-INF/views/settings/twitterConnected.jsp" />
    </definition>

    <definition name="settings/facebookConnect" extends="standard">
        <put-attribute name="content" value="/WEB-INF/views/settings/facebookConnect.jsp" />
        <put-list-attribute name="scripts">
            <add-attribute value="/social/facebook/all.js"/>
            <add-attribute value="/social/facebook/facebook-extras.js"/>
            <add-attribute value="/social/facebook/init.js"/>
        </put-list-attribute>
    </definition>

    <definition name="settings/facebookConnected" extends="standard">
        <put-attribute name="content" value="/WEB-INF/views/settings/facebookConnected.jsp" />
        <put-list-attribute name="scripts">
            <add-attribute value="/social/facebook/all.js"/>
            <add-attribute value="/social/facebook/facebook-extras.js"/>
            <add-attribute value="/social/facebook/init.js"/>
        </put-list-attribute>
    </definition>

</tiles-definitions>